<Window x:Class="AppAuthorization.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Вход в систему" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Маркетплейс - Вход в систему" FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Имя пользователя:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="pwdPassword" Margin="0,0,0,15" Padding="5"/>

            <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,15" Visibility="Collapsed"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnLogin" Content="Войти" Width="100" Margin="0,0,10,0" Padding="5" Click="BtnLogin_Click"/>
                <Button x:Name="btnRegister" Content="Регистрация" Width="100" Margin="10,0,0,0" Padding="5" Click="BtnRegister_Click"/>
            </StackPanel>
        </StackPanel>

        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Готов к работе" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
