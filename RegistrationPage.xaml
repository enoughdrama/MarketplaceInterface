<Window x:Class="AppAuthorization.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Регистрация" Height="550" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Регистрация нового пользователя" FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Margin="0,10">
                <TextBlock Text="Имя пользователя:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Имя:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFirstName" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Фамилия:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtLastName" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Email:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="pwdPassword" Margin="0,0,0,5" Padding="5" PasswordChanged="PwdPassword_PasswordChanged"/>

                <TextBlock Text="Подтвердите пароль:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="pwdConfirmPassword" Margin="0,0,0,5" Padding="5" PasswordChanged="PwdConfirmPassword_PasswordChanged"/>

                <StackPanel Margin="0,5,0,15">
                    <TextBlock Text="Требования к паролю:" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtMinLength" Text="・ Минимум 8 символов" FontSize="12" Foreground="#555555"/>
                    <TextBlock x:Name="txtUpperCase" Text="・ Минимум 1 заглавная буква" FontSize="12" Foreground="#555555"/>
                    <TextBlock x:Name="txtLowerCase" Text="・ Минимум 1 строчная буква" FontSize="12" Foreground="#555555"/>
                    <TextBlock x:Name="txtDigit" Text="・ Минимум 1 цифра" FontSize="12" Foreground="#555555"/>
                    <TextBlock x:Name="txtSpecialChar" Text="・ Минимум 1 спецсимвол (！@#$%^&*)" FontSize="12" Foreground="#555555"/>
                    <TextBlock x:Name="txtPasswordsMatch" Text="・ Пароли должны совпадать" FontSize="12" Foreground="#555555"/>
                </StackPanel>

                <ComboBox x:Name="cmbRole" Margin="0,0,0,15" Padding="5" DisplayMemberPath="RoleName" SelectedValuePath="RoleId"/>
                <TextBlock Text="Выберите роль" Margin="0,-15,0,15" FontSize="10" Foreground="Gray"/>

                <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,15" Visibility="Collapsed"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnRegister" Content="Зарегистрироваться" Width="150" Margin="0,0,10,0" Padding="5" Click="BtnRegister_Click"/>
                    <Button x:Name="btnCancel" Content="Отмена" Width="100" Margin="10,0,0,0" Padding="5" Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Готов к регистрации" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
