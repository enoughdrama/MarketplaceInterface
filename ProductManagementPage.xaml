<Page x:Class="AppAuthorization.ProductManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppAuthorization"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="Управление товарами">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="Black"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Text="Управление товарами" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#FF3B5998"/>

            <!-- Back button -->
            <Button Grid.Column="2" Content="Назад" Style="{StaticResource ActionButtonStyle}" Margin="0,0,20,0" Click="BackButton_Click"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Products List -->
            <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="10" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Список товаров" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1" x:Name="ProductsDataGrid" AutoGenerateColumns="False" 
                              IsReadOnly="True" SelectionMode="Single" SelectionChanged="ProductsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="120"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:N2} ₽}" Width="100"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Product Details -->
            <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="10" Margin="10,0,0,0" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Информация о товаре" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Название:"/>
                            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

                            <TextBlock Text="Описание:"/>
                            <TextBox x:Name="DescriptionTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>

                            <TextBlock Text="Цена:"/>
                            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

                            <TextBlock Text="Количество:"/>
                            <TextBox x:Name="QuantityTextBox" Margin="0,0,0,10"/>

                            <TextBlock Text="Категория:"/>
                            <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="Name" Margin="0,0,0,10"/>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Новый" Style="{StaticResource FormButtonStyle}" Width="80" Margin="0,0,5,0" Click="NewButton_Click"/>
                        <Button Content="Сохранить" Style="{StaticResource FormButtonStyle}" Width="80" Margin="5,0" Click="SaveButton_Click"/>
                        <Button Content="Удалить" Style="{StaticResource FormButtonStyle}" Width="80" Margin="5,0,0,0" Click="DeleteButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
